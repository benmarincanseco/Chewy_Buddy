<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/my_pet"
        android:textColor="@color/black"
        android:textSize="26sp" />
    <TextView
        android:layout_below="@id/textView"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/name_buddy"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:layout_below="@id/textView1"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/type_dog"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:layout_below="@id/textView2"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/breed_golden_retriever"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:layout_below="@id/textView3"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/age_5"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:layout_below="@id/textView4"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/sex_male"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:layout_below="@id/textView5"
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/friend_code_1x5t13"
        android:textColor="@color/black"
        android:textSize="16sp" />


</RelativeLayout>